# Docker Environment Configuration
# Copy this file to .env and customize as needed

# Application Port (default: 3000)
# If port 3000 is busy, change to 3001, 3002, etc.
APP_PORT=3000

# Database Port (default: 5432)
# If port 5432 is busy, change to 5433, 5434, etc.
DB_PORT=5432

# PostgreSQL credentials (production)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=urlshortener

# Application
DATABASE_URL=postgresql://postgres:your-secure-password@url-shortener-db:5432/urlshortener
NEXT_PUBLIC_APP_URL=https://yourdomain.com
AUTH_SECRET=your-auth-secret

# Payment Gateways (see main .env.example for all variables)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

PAYMOB_API_KEY=
PAYMOB_INTEGRATION_ID_CARD=
PAYMOB_INTEGRATION_ID_WALLET=
PAYMOB_HMAC_SECRET=
PAYMOB_IFRAME_ID=

PAYTABS_PROFILE_ID=
PAYTABS_SERVER_KEY=
PAYTABS_REGION=SAU

PADDLE_API_KEY=
PADDLE_VENDOR_ID=
PADDLE_PUBLIC_KEY=
PADDLE_ENVIRONMENT=production
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=
